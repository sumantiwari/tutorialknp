{% extends 'EventBundle::layout.html.twig' %}

{% block body %}

    <section class="event-show">
        <header id="menu">
            <a class="link" href="{{ path('event_index') }}">&larr; back to the events list</a>
        </header>

        <article>
            <header class="map-container">
                <img src="https://maps.googleapis.com/maps/api/staticmap?center=Brooklyn+Bridge,New+York,NY&zoom=13&size=600x300&maptype=roadmap
&markers=color:blue%7Clabel:S%7C40.702147,-74.015794&markers=color:green%7Clabel:G%7C40.711614,-74.012318
&markers=color:red%7Clabel:C%7C40.718217,-73.998284
&key=AIzaSyA-B377HnaIQT9vtI8JuKYOhFv93V5jkLA" />
            </header>
            <section>
                <h1>
                    {{ entity.name }}
                    <a class="button" href="{{ path('event_edit', {'id': entity.id}) }}">edit</a>
                </h1>

                <dl>
                    <dt>where:</dt>
                    <dd>{{ entity.location }}</dd>

                    <dt>when:</dt>
                    <dd>{{ entity.time | date('g:ia / l M j, Y') }}</dd>

                    <dt>what:</dt>
                    <dd>{{ entity.detail }}</dd>

                    <dt>who:</dt>
                    <dd>
                        <ul class="users">
                            <li>nobody yet!</li>
                        </ul>
                    </dd>
                </dl>
            </section>
        </article>
    </section>
{% endblock %}
